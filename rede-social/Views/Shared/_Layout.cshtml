    <footer class="bg-light text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            &copy; 2023 - Fluxo Instantâneo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de privacidade</a>

