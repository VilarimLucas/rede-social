    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fluxo Instantâneo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/rede_social.styles.css" asp-append-version="true" />
</head>
<body>
    <style>
        /* Adicione estilos personalizados aqui */
        .header {
            background-color: #fff; /* Cor de fundo do header */
            border-bottom: 1px solid #ccc; /* Borda inferior */
            padding: 10px 0; /* Espaçamento interno superior e inferior */
        }

        .logo {
            float: right; /* Alinhe o logotipo à direita */
        }

        .search-bar {
            text-align: center; /* Alinhe a barra de pesquisa ao centro */
        }

        .user-menu {
            float: left; /* Alinhe o menu de usuário à esquerda */
            margin-right: 10px; /* Espaçamento à direita */
        }
    </style>

    <header class="header">
        <div class="container text-center">
            <div class="row align-items-start">
                <div class="col">
                    <!-- Logotipo à direita -->
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fluxo Instantâneo</a>
                </div>
                <div class="col">
                    <!-- Barra de pesquisa -->
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisar" aria-label="Pesquisar" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Buscar</button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <!-- Menu suspenso do usuário -->

                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="..."  width="30" height="30">
                            Nome do Usuário
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Ver Perfil</a></li>
                            <li><a class="dropdown-item" href="#">Sair</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

